<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="ShareLoc" transaction-type="RESOURCE_LOCAL">
		<class>api.model.User</class>
		<class>api.model.Colocation</class>
		<class>api.model.Membre</class>
		<class>api.model.Message</class>
		<class>api.model.VoteService</class>
		<class>api.model.Service</class>
		<class>api.model.VoteDeleteService</class>
		<class>api.model.AchievedService</class>
		<class>api.model.VoteAchievedService</class>
		<class>api.model.Invitation</class>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/lp1_shareloc?zeroDateTimeBehavior=CONVERT_TO_NULL&amp;serverTimezone=UTC"/>
			<property name="javax.persistence.jdbc.user" value="root"/>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
		</properties>
	</persistence-unit>
</persistence>
